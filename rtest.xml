<?xml version="1.0" encoding="UTF-8"?>
<testset>
    <var name="COMMAND">rocsolver-test --gtest_color=yes </var>
    <test sets="psdb">
        <run name="all-psdb">{COMMAND} --gtest_filter=*checkin_lapack*-*known_bug* --gtest_output=xml </run>
    </test>
    <test sets="osdb">
        <run name="all-osdb">{COMMAND} --gtest_filter=*daily_lapack*-*known_bug* --gtest_output=xml </run>
    </test>
    <test sets="hmm">
        <!-- * These tests should only be run on devices supporting HMM -->
        <run name="hmm-adhoc">{COMMAND} --gtest_filter=*MANAGED_MALLOC*-*known_bug* --gtest_output=xml </run>
    </test>
    <test sets="new5.0">
        <!-- ! SWDEV-291463 -->
        <run name="infra-tests">{COMMAND} --gtest_filter=*MEMORY_MODEL* --gtest_output=xml</run>
        <!-- ! SWDEV-291553 -->
        <run name="sym-tri-fact">{COMMAND} --gtest_filter=*SYTF2*:*SYTRF*-*known_bug* --gtest_output=xml</run>
        <!-- ! SWDEV-297006 -->
        <run name="cusolver-missing">{COMMAND} --gtest_filter=*POTRS*:*GESV*:*GELS*:*SYEV* --gtest_output=xml</run>
    </test>
</testset>
